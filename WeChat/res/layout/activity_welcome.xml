<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="cn.ucai.superwechat.ui.WelcomeActivity">

    <ImageView
        android:id="@+id/iv_logo_welcome"
        android:src="@drawable/icon_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="100dp"
        android:layout_height="90dp"/>
    <Button
        android:id="@+id/btn_login_wel"
        android:background="@drawable/icon_btn_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_logo_welcome"
        android:layout_marginTop="50dp"
        android:layout_width="180dp"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btn_register_wel"
        android:background="@drawable/icon_btn_register"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_login_wel"
        android:layout_marginTop="25dp"
        android:layout_width="180dp"
        android:layout_height="50dp"/>
</RelativeLayout>
